<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane style="-fx-font-family: Arial;" prefHeight="653.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.htw.ba.ue02.controller.HoughTransformationController">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER" prefHeight="25.0" prefWidth="792.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onOpenFileClick" prefHeight="25.0" prefWidth="93.0" text="Bild laden" />
                  <Label text="Image:">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Label>
                  <ComboBox fx:id="imageSelection" prefWidth="150.0" />
                  <Label text="Anzeige:">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Label>
                  <ComboBox fx:id="methodSelection" prefWidth="150.0" />
                  <Label text="Label">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Label>
                  <Slider fx:id="customSlider" majorTickUnit="0.1" max="1.0" minorTickCount="1" value="0.5" />
                  <Button mnemonicParsing="false" onAction="#applyTransformation" prefHeight="25.0" prefWidth="110.0" text="Ausführen">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <ImageView fx:id="leftImageView" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS">
        
                  </ImageView>
                  <ImageView fx:id="rightImageView" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS">
       
                  </ImageView>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="20.0" prefWidth="200.0">
               <children>
                  <Label fx:id="runtimeLabel" text="Methode X ausgeführt in 0 ms" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
